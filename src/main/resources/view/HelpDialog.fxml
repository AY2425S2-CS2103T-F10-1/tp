<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="mainVBox" maxHeight="400.0" maxWidth="400.0" minHeight="400.0" minWidth="400.0" prefHeight="400.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox fx:id="helpTitleBar">
         <children>
            <Label text="Help">
               <font>
                  <Font name="Inter Bold" size="14.0" />
               </font>
               <HBox.margin>
                  <Insets />
               </HBox.margin>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </Label>
            <StackPane alignment="CENTER_RIGHT" HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
      <HBox fx:id="helpMessageContainer" alignment="CENTER" spacing="3.0">
         <children>
            <Label fx:id="helpMessage" text="For more details, visit our" />
            <Hyperlink fx:id="userGuideLink" onAction="#openUserGuide" text="User Guide" />
         </children>
         <opaqueInsets>
            <Insets bottom="10.0" left="5.0" right="10.0" top="5.0" />
         </opaqueInsets>
         <padding>
            <Insets bottom="10.0" left="5.0" right="10.0" top="5.0" />
         </padding>
      </HBox>
      <VBox VBox.vgrow="ALWAYS">
         <children>
            <ScrollPane fitToHeight="true" fitToWidth="true" VBox.vgrow="ALWAYS">
               <content>
                  <TextArea fx:id="instructionsTextArea" editable="false" wrapText="true" />
               </content>
            </ScrollPane>
         </children>
      </VBox>
   </children>
</VBox>
